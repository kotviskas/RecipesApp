<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipesKode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/base1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/icons</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="popupTheme">@style/popupTheme</item>

    </style>

    <style name="Theme.RecipesKode.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecipesKode.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RecipesKode.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>


    <style name="popupTheme" parent="Theme.AppCompat.Light">

        <item name="android:background">@color/icons</item>
        <item name="android:textColor">@color/icons</item>

    </style>

    <style name="Theme.RecipesKode.Toolbar" parent="Theme.RecipesKode">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/base1</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/icons</item>
    </style>
</resources>